@model SingleProductViewModel

<div class="rounded col-lg-2 col-12 py-3">
    <div class='card h-100 pt-4'>
        <div class='d-flex align-items-center'>
            <img class='img-fluid mx-auto p-4' src="@Model.ImageBase64" />
        </div>
        <div class='card-body'>
            <p class='card-text title fw-bold'>@Model.Name</p>
        </div>
        @if (Model.IsAgeBound)
        {
            <div class='card-footer'>
                <span class="badge bg-success tag-18">18+</span>
            </div>
        }
    </div>
</div>